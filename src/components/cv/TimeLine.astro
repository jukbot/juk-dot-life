---
const { title, subtitle } = Astro.props;
---

<div class="flex">
	<div class="education__time">
		<span class="bg-primary mt-1 block h-4 w-4 rounded-full"></span>
		<span class="education__line bg-primary block h-full w-[2px] translate-x-[7px]"></span>
	</div>
	<div class="experience__data bd-grid px-5">
		<h3 class="mb-1 font-semibold">{title}</h3>
		<span class="text-sm font-light">{subtitle}</span>
		<p class="my-2 text-justify">
			<slot />
		</p>
	</div>
</div>
